<div class="ps-modal edit-sensor-modal" ng-controller="SectionCtrl">
  <div class="p-3">
    <h2>Section Details</h2>


    <div class="text-center perimeter-canvas">

      <img class="img-fluid" id="scream" src="<%= image_path 'lot-map.jpg' %>">

      <!--  here be the place for draggable boxes -->
      <div ng-repeat="per in parkingPerimeters" class="drag per-drag-{{per.id}} "
           data-id="{{per.id}}"
           style="top: {{ top(per) }} ; left:{{left(per)}}">

        <div class="per-res-{{per.id}} perimeter"
             ng-mouseup="clickPer(per)"
             ng-class="{selected: ( selectedPer == per)}"
             data-id="{{per.id}}"
             style="width: {{ width(per) }} ; height:{{ height(per) }} ">
          <h5> {{per.identifier}} </h5>
        </div>


        <div ng-repeat-end ng-init="makeDraggable(per)"></div>
      </div>

    </div>

    <div class="d-flex p-2 justify-content-around perim-buttons">
      <button class="btn btn-outline-success" ng-click="newPerimeter()">
        <i class="fa fa-square"></i> Adaugă perimetru loc parcare
      </button>
      <button class="btn btn-outline-warning" ng-click="newPerimeter()">
        <i class="fa fa-square"></i> Încarcă plan nou parcare
      </button>
    </div>


    <div ui-view="perimeter"></div>
    <!-- Here be the parking plan edit form -->
    <div class="my-5 p-4">
      <form novalidate id="sectionForm" name="sectionForm">
        <div class="form-row form-group">
          <label class="col-form-label col-sm-2" for="name"> Nume </label>
          <div class="col-sm-10">
            <input id="name" class="form-control" disabled required ng-model="section.name">
            <small class="form-text ">Nume sectiune parcare</small>
          </div>
        </div>
        <div class="form-row form-group">
          <label class="col-form-label col-sm-2" for="name"> Descriere </label>
          <div class="col-sm-10">
            <input id="name" class="form-control" required ng-model="section.description">
            <small class="form-text "></small>
          </div>
        </div>

        <div class="d-flex justify-content-between">
          <button class="btn btn-primary" ng-click="savePerimeters()" ng-disabled="loading">
            <i class="fa fa-spinner fa-spin" ng-show="loading"></i>
            Salvează locurile
          </button>
          <button class="btn btn-secondary" ng-click="resetPerimeters()" ng-disabled="loading">
            <i class="fa fa-spinner fa-spin" ng-show="loading"></i>
            Resetează la starea inițială
          </button>
          <button class="btn btn-danger" ui-sref="^" ng-disabled="loading">
            <i class="fa fa-spinner fa-spin" ng-show="loading"></i>
            Anulează
          </button>
        </div>

      </form>
    </div>

  </div>

</div>