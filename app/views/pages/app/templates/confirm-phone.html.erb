<div class="ps-modal  animated fadeIn p-4" ng-controller="ConfirmPhoneCtrl">
  <div class="search-space-modal container animated zoomIn mt-md-5 py-3 py-md-4">

    <h3 class="mt-2"> Confirmare număr telefon</h3>

    <hr/>

    <div class="form-group mt-5 row">
      <div class="col-4 text-center border-right">
        <img src="<%= image_path 'phone_and_sms_xs.png' %>" height="100px"/>
      </div>
      <div class="col-8 border-left">
        <label for="phoneNumber">Introduceți codul primit prin SMS:</label>
        <input class="form-control form-control-lg code-confirm"
               autocomplete="none"
               autocorrect="none"
               autocapitalize="none"
               ng-model="confirmationCode"
               required maxlength="4"
               minlength="4">
      </div>
    </div>

    <div class="text-center d-flex justify-content-around">
      <button class="btn btn-primary btn-lg" ng-click="validateCode()">
        <i class="fa fa-spinner loading-spinner fa-spin"></i>
        Validează
      </button>
    </div>


    <hr class="my-4"/>

    <form name="phoneConfirmation">
      <div class="form-group">
        <label for="phoneNumber">Număr telefon:</label>
        <div class="input-group input-group-lg">
            <div class="input-group-prepend" onclick="$('#editPhoneNumber').show()">
               <span class="input-group-text">
              <img width="25" src="<%= image_path 'app/flags/Romania.png' %>">
              &nbsp;
              {{ selectedCountry.prefix || '+40'}}
               </span>
            </div>
          <input class="phone-number form-control" type="text" id="phoneNumber"
                 ng-model="user.phoneNumber"
                 name="phoneNumber"
                 cleave="options.phoneNumber"
                 pattern="[0-9]{3}[\. ]*[0-9]{3}[\. ]*[0-9]{3}"/>
        </div>
        <small class="form-text text-muted">(e.g. 727.123.456)</small>
      </div>
      <div class="d-flex justify-content-center">
        <button class="btn btn-info" ng-click="resendCode()">Trimite cod nou</button>
      </div>


    </form>
  </div>
</div>